<h1>Erőforrás szerkesztése</h1>
<%if flash[:errors] %>
  <%flash[:errors].each do |e| %>
    <p><%= e %></p>
  <% end %>
<% end %>
<form action="/resources/<%= @resource.id %>" method="post">
  <input type="hidden" name="_method" value="patch"/>
  <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>"/>
  <p>
    <label>Név:</label>
    <input type="text" name="resource[név]" value="<%=@resource.név %>">
  </p>
  <p>
    <label>Kód:</label>
    <input type="text" name="resource[kód]" value="<%=@resource.kód %>">
  </p>
  <p>
  <p>
    <label>típus</label>:
    <%= collection_select(:resource, :resource_type_id, @resource_types, :id, :név, prompt: true,) %></p>
  </p>
  <input type="submit" value="Update">
</form>

<%= link_to 'Back', {:action => 'list' } %>